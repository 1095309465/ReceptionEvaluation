<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_circle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="@drawable/top_left_right_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="23dp">

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="确定要删除这两段录像吗？"
            android:textColor="#4D4D4D"
            android:textSize="15.33sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bottom_left_coners_selector"
            android:gravity="center"
            android:padding="13dp"
            android:text="确认"
            android:textColor="#4D4D4D"
            android:textSize="15.33sp" />


        <View
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="#DBDBDB" />


        <TextView
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_right_coners_selector"
            android:gravity="center"
            android:padding="13dp"
            android:text="取消"
            android:textColor="#4D4D4D"
            android:textSize="15.33sp" />


    </LinearLayout>

</LinearLayout>