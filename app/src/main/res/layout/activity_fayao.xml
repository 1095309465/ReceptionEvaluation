<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.FayaoActivity">

    <RelativeLayout
        android:id="@+id/fayao_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:padding="0dp"
        android:background="@color/buttongreen">

        <ImageView
            android:id="@+id/fayao_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/back"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:paddingRight="0dp"
            android:padding="15dp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"/>

        <TextView
            android:id="@+id/fayao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8月17日"
            android:padding="15dp"
            android:textColor="@color/color_white"
            android:layout_alignParentEnd="true"
            android:drawableRight="@mipmap/icon_main_down"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/fayao_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发药"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/fayao_back"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_white"
            android:textSize="17sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/drug_choose_top"
        android:layout_width="250dp"
        android:layout_height="108dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_coners_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/drug_time_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一天"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/drug_arrow_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_keyboard_arrow_down_black_18dp"
            android:layout_marginRight="13.8dp"/>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/drug_choose"
        android:layout_width="250dp"
        android:layout_marginBottom="20dp"
        android:layout_height="108dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_coners_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/drug_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一天"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/drug_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_keyboard_arrow_down_black_18dp"
            android:layout_marginRight="13.8dp"/>

    </LinearLayout>

</LinearLayout>
