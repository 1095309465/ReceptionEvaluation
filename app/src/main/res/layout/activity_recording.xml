<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jhzy.receptionevaluation.ui.CourseRecordActivity">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#B3000000">

        <ImageView
            android:id="@+id/recording_back"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:paddingBottom="12dp"
            android:paddingLeft="14dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:src="@mipmap/recording_back" />

        <ImageView
            android:id="@+id/recording_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/recording_delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/recording_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="27sp" />

        <ImageView
            android:id="@+id/recording_redpoit"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@id/recording_time"
            android:src="@mipmap/recording_redpoit" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/recording_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/recording_video" />


    <LinearLayout
        android:id="@+id/recording_video_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/recording_video_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:src="@mipmap/video_delete" />

        <ImageView
            android:id="@+id/recording_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:src="@mipmap/video_play" />

        <ImageView
            android:id="@+id/recording_video_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/video_sure" />


    </LinearLayout>


</RelativeLayout>
