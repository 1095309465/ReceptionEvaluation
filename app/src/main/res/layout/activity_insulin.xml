<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context="com.jhzy.receptionevaluation.ui.dispensingdrug.InsulinActivity">

    <RelativeLayout
        android:id="@+id/insulin_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/insulin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/back"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>

        <TextView
            android:id="@+id/insulin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="胰岛素注射"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="17dp"
        android:paddingTop="20.8dp"
        android:paddingBottom="20.8dp"
        android:background="@color/color_gray_eeeeee">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/insulin_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            fresco:placeholderImage="@mipmap/img_zwt_220"
            fresco:placeholderImageScaleType="fitCenter"
            />
        <TextView
            android:id="@+id/insulin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/insulin_photo"
            android:textColor="@color/color_black_333333"
            android:text="姓名"
            android:textSize="18sp"
            android:layout_alignTop="@id/insulin_photo"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="19dp"/>
        <TextView
            android:id="@+id/insulin_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/color_gray_858585"
            android:textSize="17sp"
            android:layout_toRightOf="@id/insulin_photo"
            android:layout_alignBottom="@id/insulin_photo"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="19dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_triangle"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:id="@+id/insulin_timetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐前"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                />
            <TextView
                android:id="@+id/insulin_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"/>
        </RelativeLayout>
        <View style="@style/insulin_border"/>
        <RelativeLayout
            android:id="@+id/insulin_time_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注射时间"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                />
            <TextView
                android:id="@+id/insulin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"/>
        </RelativeLayout>
        <View
            android:id="@+id/insulin_time_div"
            style="@style/insulin_border"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/insulin_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际注射量"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="22dp"
                />
            <TextView
                android:id="@+id/insulin_noinsulin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存不足"
                android:textColor="@color/color_red_e50000"
                android:drawableLeft="@mipmap/icon_no_insulin"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:layout_toRightOf="@id/insulin_subtitle"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/insulin_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单位"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="18dp"/>
            <EditText
                android:id="@+id/insulin_edit"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_insulin_edittext"
                android:layout_centerVertical="true"
                android:textSize="17sp"
                android:layout_toLeftOf="@id/insulin_amount"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                android:inputType="numberDecimal"
                />


        </RelativeLayout>
        <View style="@style/insulin_border"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实际注射部位"
            android:paddingLeft="18dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/insulin_1"
                    style="@style/insulin_item"
                    android:text="1"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/insulin_3"
                    style="@style/insulin_item"
                    android:text="3"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/insulin_5"
                    style="@style/insulin_item"
                    android:text="5"/>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_insulin_big"/>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/insulin_2"
                    style="@style/insulin_item"
                    android:text="2"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/insulin_4"
                    style="@style/insulin_item"
                    android:text="4"/>
                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/insulin_6"
                    style="@style/insulin_item"
                    android:text="6"/>
            </LinearLayout>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/insulin_inject"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="130dp"
                android:layout_marginTop="37dp"
                android:background="@drawable/selector_login"
                android:gravity="center"
                android:padding="10dp"
                android:text="注射"
                android:textColor="@color/color_white"
                android:textSize="18sp"
                android:visibility="invisible"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
