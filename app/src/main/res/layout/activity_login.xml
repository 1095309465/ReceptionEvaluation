<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:mContext="com.jhzy.receptionevaluation.ui.login.LoginActivity">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="120dp"
        android:background="@mipmap/logo_assess" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="家和尊养"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_frame_circle"
        android:drawableLeft="@mipmap/icon_username"
        android:drawablePadding="5dp"
        android:hint="账号"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:textColorHint="#9b9b9b"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_frame_circle"
        android:drawableLeft="@mipmap/icon_pass"
        android:drawablePadding="5dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:singleLine="true"
        android:textColorHint="#9b9b9b"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/selector_login"
        android:gravity="center"
        android:padding="15dp"
        android:text="登录"
        android:textColor="@color/color_white" />
</LinearLayout>
