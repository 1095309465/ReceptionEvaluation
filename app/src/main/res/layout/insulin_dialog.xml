<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_bar_uncheck"
        android:text="胰岛素剂量"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp">
        <EditText
            android:id="@+id/insulin_dialog_edit"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_insulin_edittext"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位"
            android:layout_toRightOf="@id/insulin_dialog_edit"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_gray_999999"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/login_border"
        android:layout_marginTop="35dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/insulin_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="确认"
            android:gravity="center"
            android:textColor="@color/color_black_333333"
            android:background="@drawable/selector_insulin_dialog"/>
        <View
            android:layout_width="0.2dp"
            android:layout_height="25dp"
            android:background="@color/login_border"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/insulin_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_black_333333"
            android:background="@drawable/selector_insulin_dialog"/>
    </LinearLayout>
</LinearLayout>