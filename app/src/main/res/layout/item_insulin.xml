<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/item_insulin_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_corners"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <View
                android:id="@+id/item_insulin_color"
                android:layout_width="10dp"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/item_insulin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早餐前"
                android:textColor="@color/color_black_333333"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_insulin_fayao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="22dp"
                android:drawableRight="@mipmap/icon_peiyao_arrow"
                android:drawablePadding="5dp"
                android:textColor="@color/color_gray_999999"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_border"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="22dp"
            android:paddingBottom="22dp">
            <TextView
                android:id="@+id/item_insulin_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="拉开芭几百块就帮我开个不玩洛克hi副本微博反馈微博不不可能了那块你"
                android:textColor="@color/color_black_666666"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/item_insulin_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_insulin_edit"
                android:background="@drawable/selector_fayao"
                android:drawablePadding="6dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/white"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_below="@id/item_insulin_main"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
</RelativeLayout>